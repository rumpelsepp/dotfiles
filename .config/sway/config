### Variables
#
# Logo key. Use Mod1 for Alt.
set $mod Mod4
set $term_prog foot
set $term_args --log-level warning
set $launcher_prog foot
set $launcher_args --log-level none --title launcher --app-id launcher
# set $launcher alacritty --title launcher --class launcher -e

### Output configuration
#
# Default wallpaper (more resolutions are available in /usr/share/backgrounds/sway/)
output * bg /usr/share/backgrounds/sway/Sway_Wallpaper_Blue_1920x1080.png fill
# output * background ~/Pictures/wallpaper.jpg fill

### Idle configuration
exec systemd-cat -t swayidle swayidle
# exec systemd-cat -t nm-applet nm-applet --indicator

# exec systemd-cat /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1

### Input configuration

    input "2:7:SynPS/2_Synaptics_TouchPad" {
        dwt enabled
        tap enabled
        natural_scroll enabled
        middle_emulation enabled
    }

    input "*" {
        xkb_layout de(neo)
    }

### Key bindings
#
# Basics:
#
    bindsym $mod+grave workspace back_and_forth
    bindsym $mod+dead_circumflex workspace back_and_forth
    bindsym $mod+l exec loginctl lock-session
    bindsym $mod+Shift+l exec systemctl suspend
    bindsym $mod+x [urgent="latest"] focus

    # Drag floating windows by holding down $mod and left mouse button.
    # Resize them with right mouse button + $mod.
    # Despite the name, also works for non-floating windows.
    # Change normal to inverse to use left mouse button for resizing and right
    # mouse button for dragging.
    floating_modifier $mod normal

    bindsym $mod+Shift+c reload

#
# Media Keys
#
    bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
    bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
    bindsym $mod+Ctrl+Up exec pactl set-sink-volume @DEFAULT_SINK@ +5%
    bindsym $mod+Ctrl+Down exec pactl set-sink-volume @DEFAULT_SINK@ -5%

    bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
    bindsym XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle
    bindsym XF86MonBrightnessUp exec light -A 10
    bindsym XF86MonBrightnessDown exec light -U 10

    bindsym XF86AudioPlay exec playerctl -a play-pause
    bindsym XF86AudioStop exec playerctl -a stop
    bindsym XF86AudioNext exec playerctl -a next
    bindsym XF86AudioPrev exec playerctl -a previous

    bindsym $mod+Pause exec playerctl -a play-pause
    bindsym $mod+Next exec playerctl -a next
    bindsym $mod+Prior exec playerctl -a previous

    bindsym $mod+Ctrl+XF86AudioRaiseVolume exec playerctl -a volume 0.05+
    bindsym $mod+Ctrl+XF86AudioLowerVolume exec playerctl -a volume 0.05-
    # FIXME: doesn't work. Better keybindings needed.
    # bindsym $mod+Ctrl+Right exec playerctl -a position 5+
    # bindsym $mod+Ctrl+Left exec playerctl -a position 5-

#
# Moving around:
#
    bindsym $mod+Left focus left
    bindsym $mod+Down focus down
    bindsym $mod+Up focus up
    bindsym $mod+Right focus right

    bindsym $mod+Shift+Left move left
    bindsym $mod+Shift+Down move down
    bindsym $mod+Shift+Up move up
    bindsym $mod+Shift+Right move right

    # bindsym $mod+b workspace prev_on_output
    # bindsym $mod+n workspace next_on_output
    bindsym $mod+less move workspace to output left
    bindsym $mod+greater move workspace to output right

    # Workspaces above 5 are dedicated to:
    #    5: Browser
    #    6: mpv
    #    9: Wireshark
    #   10: Messages (email, chat, â€¦)
    for_window [app_id="wireshark"] move container to workspace 9
    for_window [app_id="firefox"] move container to workspace 5
    for_window [app_id="mpv"] move container to workspace 6
    for_window [app_id="evolution"] move container to workspace 10

#
# Workspaces:
#
    bindsym $mod+Shift+Return exec sway-new-workspace.sh

    bindsym $mod+1 workspace 1
    bindsym $mod+2 workspace 2
    bindsym $mod+3 workspace 3
    bindsym $mod+4 workspace 4
    bindsym $mod+5 workspace 5
    bindsym $mod+6 workspace 6
    bindsym $mod+7 workspace 7
    bindsym $mod+8 workspace 8
    bindsym $mod+9 workspace 9
    bindsym $mod+0 workspace 10

    bindsym $mod+KP_1 workspace 1
    bindsym $mod+KP_2 workspace 2
    bindsym $mod+KP_3 workspace 3
    bindsym $mod+KP_4 workspace 4
    bindsym $mod+KP_5 workspace 5
    bindsym $mod+KP_6 workspace 6
    bindsym $mod+KP_7 workspace 7
    bindsym $mod+KP_8 workspace 8
    bindsym $mod+KP_9 workspace 9
    bindsym $mod+KP_0 workspace 10

    bindsym $mod+Shift+1 move container to workspace 1
    bindsym $mod+Shift+2 move container to workspace 2
    bindsym $mod+Shift+3 move container to workspace 3
    bindsym $mod+Shift+4 move container to workspace 4
    bindsym $mod+Shift+5 move container to workspace 5
    bindsym $mod+Shift+6 move container to workspace 6
    bindsym $mod+Shift+7 move container to workspace 7
    bindsym $mod+Shift+8 move container to workspace 8
    bindsym $mod+Shift+9 move container to workspace 9
    bindsym $mod+Shift+0 move container to workspace 10

    bindsym $mod+Shift+KP_1 move container to workspace 1
    bindsym $mod+Shift+KP_2 move container to workspace 2
    bindsym $mod+Shift+KP_3 move container to workspace 3
    bindsym $mod+Shift+KP_4 move container to workspace 4
    bindsym $mod+Shift+KP_5 move container to workspace 5
    bindsym $mod+Shift+KP_6 move container to workspace 6
    bindsym $mod+Shift+KP_7 move container to workspace 7
    bindsym $mod+Shift+KP_8 move container to workspace 8
    bindsym $mod+Shift+KP_9 move container to workspace 9
    bindsym $mod+Shift+KP_0 move container to workspace 10

#
# Layout stuff:
#
    # You can "split" the current object of your focus with
    # $mod+b or $mod+v, for horizontal and vertical splits
    # respectively.
    bindsym $mod+v splitv
    bindsym $mod+h splith

    # Switch the current container between different layout styles
    bindsym $mod+s layout stacking
    bindsym $mod+w layout tabbed
    bindsym $mod+e layout toggle split

    # Make the current focus fullscreen
    bindsym $mod+f fullscreen

    # Toggle the current focus between tiling and floating mode
    bindsym $mod+Shift+space floating toggle

    # Swap focus between the tiling area and the floating area
    bindsym $mod+space focus mode_toggle

    # move focus to the parent container
    bindsym $mod+a focus parent

#
# Scratchpad:
#
    bindsym $mod+Shift+t move scratchpad
    bindsym $mod+t scratchpad show

#
# Applications:
#
    bindsym $mod+Shift+q kill

    # shortcuts
    # bindsym $mod+m exec systemd-cat -t thunar thunar
    bindsym $mod+m exec systemd-cat -t nautilus nautilus
    bindsym $mod+q exec systemd-cat -t firefox firefox

    # mako
    bindsym $mod+n exec systemd-cat -t dunstctl dunstctl close
    bindsym $mod+Shift+n exec systemd-cat -t dunstctl dunstctl close-all

    # terminal
    bindsym $mod+Return exec systemd-cat -t $term_prog $term_prog $term_args

    # start your launcher
    # bindsym $mod+d exec systemd-cat -t $launcher_prog $launcher_prog $launcher_args sway-starter.sh
    bindsym $mod+d exec systemd-cat -t rofi rofi -show drun -show-icons
    # bindsym $mod+Shift+d exec systemd-cat -t $launcher_prog $launcher_prog $launcher_args sway-desktop-starter.sh
    bindsym $mod+Shift+d exec systemd-cat -t rofi rofi -show run
    bindsym $mod+Tab exec systemd-cat -t $launcher_prog $launcher_prog $launcher_args sway-apps.sh
    for_window [title="^launcher$"] floating enable

    # screenshot
    bindsym Print exec screenshot.sh -an
    bindsym Shift+Print exec screenshot.sh -Wn
    bindsym $mod+Print exec screenshot.sh -on

#
# Status Bar:
#
# Read `man 5 sway-bar` for more information about this section.
bar {
    # position bottom
    # status_command swaystatus
    # swaybar_command waybar
    status_command i3status-rs $HOME/.config/i3status-rs/$(hostname).toml
}

include /etc/sway/config.d/*
include ~/.config/sway/$(hostname)
