# I want to be able to specify a different user depending on the 
# used machine. Since I use yadm to manage this file, I need to
# externalize this setting into another file.
[include]
	path = ~/.config/git/user

#[includeIf "gitdir:~/Projects/"]
#	path = ~/.config/git/workuser
#
#
[core]
	autocrlf = input
	editor = nvim +1
	hooksPath = /home/rumpelsepp/.config/git/hooks

[alias]
	st = status
	co = checkout
	ci = commit
	cm = commit -m
	br = branch
	ba = branch -a -vv
	lg = log --pretty=format:'%C(auto)%h %<(55,trunc)%s %Cblue%<(18,trunc)%an%Creset %Cgreen%<(15)%ad%Creset %C(auto)%d' --abbrev-commit --date=relative
	lol = log --decorate --oneline --abbrev-commit --all
	changelog = log --pretty=format:'%C(auto)%h (%s, %ad)' --abbrev-commit --date=short
	unstage = reset HEAD --
	aliases = config --get-regexp alias
	pushall = !git remote | xargs -L1 git push --all
	rg = grep --heading --break
	root = rev-parse --show-toplevel

[log]
	decorate = short

[status]
	short = yes

[pager]
	diff = perl /usr/share/git/diff-highlight/diff-highlight | less
	log = perl /usr/share/git/diff-highlight/diff-highlight | less
	show = perl /usr/share/git/diff-highlight/diff-highlight | less

[color "grep"]
    filename = magenta
	match = bold red
	linenumber = green

[grep]
	linenumber = true
	fallbackToNoIndex = true

#[url "git@git-int.aisec.fraunhofer.de:"]
#    insteadOf = https://git-int.aisec.fraunhofer.de/
#[url "https://git-int.aisec.fraunhofer.de/"]
#    insteadOf = git@git-int.aisec.fraunhofer.de:
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[credential]
	helper = cache
